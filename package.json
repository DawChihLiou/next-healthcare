{
  "name": "next-healthcare",
  "version": "0.1.2",
  "private": false,
  "license": "Apache License 2.0",
  "scripts": {
    "dev": "npm-run-all -p -r dev-api dev-www",
    "dev-api": "npx now-lambda --port 3001",
    "dev-www": "cd www && npx next",
    "postinstall": "cd api && npm i && cd ../www && npm i ",
    "release": "standard-version",
    "release:dry": "npm run release -- --dry-run",
    "cz": "git-cz"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && yarn cz --hook"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.3.0",
    "now-lambda-runner": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "standard-version": "^6.0.1"
  },
  "dependencies": {
    "dotenv": "^8.0.0"
  }
}
